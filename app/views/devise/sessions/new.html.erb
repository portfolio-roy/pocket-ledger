<main>
    
<div class="container auth d-flex flex-column align-items-center px-0">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'col-12' }) do |f| %>
    <div class="ui-header d-flex justify-content-between align-items-center">
       <a href="/">
  <i class="fa-solid fa-arrow-left"></i>
  </a>
        <h2 class="ui-heading">Login</h2>
        <%= f.submit "Log In", class: "next-link" %>

    </div>

<div class="col-12 border-top border-bottom inputs p-2 my-2">

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email*", class: "col-12 border-bottom" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password*", class: "col-12 border-none" %>
  </div>
</div>
  <% if devise_mapping.rememberable? %>
    <div class="field px-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<% end %>

<%= render "devise/shared/links" %>
</div>
</main>
