<main>
    <div class="container items">
        <h1>Items</h1>
        <div class="row">
            <div class="col-md-6">
                <h2>Items</h2>
                <div class="row">
                    <% @items.each do |item| %>
                        <div class="col-md-6">
                            <%= render "item", item: item %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="col-md-6">
                <%= link_to "New Item", new_category_item_path %>
            </div>
        </div>
    </div>
</main>
