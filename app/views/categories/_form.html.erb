<%= form_with(model: category, class: "col-12") do |form| %>
    <div class="ui-header d-flex justify-content-between align-items-center">
        <%= link_to "<i class='fa-solid fa-arrow-left'></i>".html_safe, categories_path %>
        <h2 class="ui-heading">New Category</h2>
        <%= form.submit "Create", class: "next-link" %>
    </div>


        <div class="col-md-12 border-top border-bottom inputs p-2 my-2">
            <div class="field">
                <%= form.text_field :name, placeholder: "Enter Category name", class: "col-12 border-bottom" %>
            </div>
            <div class="field">
                <%= form.text_field :icon, placeholder: "Enter Category icon link", class: "col-12" %>
            </div>
        </div>
 

<% end %>